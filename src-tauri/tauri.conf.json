{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "VisionBoard",
  "version": "1.0.0",
  "identifier": "com.visionboard.app",
  "build": {
    "frontendDist": "../public"
  },
  "app": {
    "windows": [
      {
        "title": "VisionBoard",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset: http://asset.localhost https://asset.localhost",
        "img-src": "'self' asset: http://asset.localhost https://asset.localhost data:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**"]
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
